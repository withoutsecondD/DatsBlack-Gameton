<Window x:Class="DrawMap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawMap"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        

        <!--<ScrollViewer Grid.Row="0" Grid.Column="0" HorizontalScrollBarVisibility="Visible">-->
        <Canvas>
            <Image Name="imageControl" Stretch="None" MaxWidth="4000" MaxHeight="4000">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="ImageScale"/>
                        <TranslateTransform x:Name="translateTransform"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Canvas>
                
        <!--</ScrollViewer>-->

       
    </Grid>
    
</Window>
