<UserControl x:Class="Gameton.WPF.EnemyShipItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Gameton.WPF"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="200"
             Foreground="OrangeRed"
             Padding="4"
             BorderBrush="Gray"
             BorderThickness="1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Name="TextBlockHp">hp: 0/0</TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="1" Name="TextBlockSize">size: 0</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0" Name="TextBlockSpeed">speed: 0</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1" Name="TextBlockDirection">direction: south</TextBlock>
    </Grid>
</UserControl>
